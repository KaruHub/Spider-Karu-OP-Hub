local OrionLib = loadstring(game:HttpGet('https://raw.githubusercontent.com/jensonhirst/Orion/main/source'))()

-- Create the main window
local Window = OrionLib:MakeWindow({
    Name = "Key System",
    HidePremium = false,  -- Makes the UI visible for all users, not just premium
    SaveConfig = true,
    ConfigFolder = "OrionTest"
})

-- Create the key input tab
local KeyTab = Window:MakeTab({
    Name = "Enter Key",
    Icon = "rbxassetid://13719397858",
    PremiumOnly = false
})

-- Create the key input section within the tab
local KeySection = KeyTab:AddSection({
    Name = "Key Input"
})

-- Create the key input textbox
local KeyTextbox = KeyTab:AddTextbox({
    Name = "Enter Key Here",
    Default = "",
    TextDisappear = true,
    Callback = function(Value)
        -- This function runs when the text in the textbox changes
    end
})

-- Create the submit button
KeyTab:AddButton({
    Name = "Submit",
    Callback = function()
        local enteredKey = KeyTextbox.Text
        if enteredKey == "KaruSpider!1" then
            -- Execute the loadstring if key is correct
            loadstring(game:HttpGet("https://raw.githubusercontent.com/KaruHub/Spider-Karu-OP-Hub/refs/heads/main/loadstring"))()
            OrionLib:MakeNotification({
                Name = "Success",
                Content = "Key correct, loading script...",
                Image = "rbxassetid://13719397858",
                Time = 5
            })
        else
            -- Show an error message if key is incorrect
            OrionLib:MakeNotification({
                Name = "Error",
                Content = "Incorrect key! Try again.",
                Image = "rbxassetid://13719397858",
                Time = 5
            })
        end
    end
})

-- Initialize the OrionLib UI
OrionLib:Init()
