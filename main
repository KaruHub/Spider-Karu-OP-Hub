local OrionLib = loadstring(game:HttpGet('https://raw.githubusercontent.com/jensonhirst/Orion/main/source'))()

local Window = OrionLib:MakeWindow({
    Name = "Key System",
    HidePremium = false,   -- Show premium status (set false to display everything)
    SaveConfig = true,
    ConfigFolder = "OrionTest",
    IntroEnabled = false   -- Disable the intro animation so the UI shows immediately
})

local KeyTab = Window:MakeTab({
    Name = "Enter Key",
    Icon = "rbxassetid://13719397858",
    PremiumOnly = false
})

local KeyTextbox = KeyTab:AddTextbox({
    Name = "Enter Key Here",
    Default = "",
    TextDisappear = true,
    Callback = function(Value)
        -- You can add code here if you want something to happen when the text changes.
    end
})

KeyTab:AddButton({
    Name = "Submit",
    Callback = function()
        local enteredKey = KeyTextbox.Text
        if enteredKey == "KaruSpider!1" then
            loadstring(game:HttpGet("https://raw.githubusercontent.com/KaruHub/Spider-Karu-OP-Hub/refs/heads/main/loadstring"))()
            OrionLib:MakeNotification({
                Name = "Success",
                Content = "Key correct, loading script...",
                Image = "rbxassetid://13719397858",
                Time = 5
            })
        else
            OrionLib:MakeNotification({
                Name = "Error",
                Content = "Incorrect key! Try again.",
                Image = "rbxassetid://13719397858",
                Time = 5
            })
        end
    end
})

OrionLib:Init()
